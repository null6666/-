/* pages/cart/index.wxss */
.scroll{
  margin-bottom: 120rpx;
}
.cart_container {
  display: flex;
  flex-direction: row;
}
.item-select {
  width: 40rpx;
  height: 40rpx;
  margin-top: 90rpx;
  margin-left: 0rpx;
}
.item-image {
  width: 180rpx;
  height: 180rpx;
  margin: 20rpx;
}
.column {
  display: flex;
  flex-direction: column;
}
.row {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.title {
  font-size: 38rpx;
  margin-top: 40rpx;
}
.sku-price {
  color: red;
  position: relative;
  margin-top: 15rpx;
}
.quantity-position{
  display: flex;
  flex-direction: row;
  align-items: center;
  position: absolute;
  width: 240rpx;
  height: 40rpx;
  right: 120rpx;
}
.image-plus {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 0rpx;
}
.image-minus {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 0rpx;
}
.quantity{
  size: 40rpx;
  position: absolute;
  left: 100rpx;
}
.detail-nav {
  display: flex;
  flex-direction: column; 
  float: left;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1;
  width: 100%;
  height: 150rpx;
}
.bottom_line {
  width: 100%;
  height: 2rpx;
  background: lightgray;
}
.item-allselect {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}
.small_text {
  font-size: 28rpx;
  margin-right: 40rpx;
  margin-left: 10rpx;
}
.price {
  color: red;
  position: relative;
}
.button-red {
  background-color: #f44336; /* 红色 */
  position: fixed;
  right: 0;
  color: white;
  text-align: center;
  display: inline-block;
  font-size: 30rpx;
  width: 30%;
  height: 80rpx;
  line-height: 50rpx;
}

.row-bottom{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 120rpx;
}
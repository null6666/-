/* pages/goods/goods/index.wxss */
view swiper {
  width: 100%;
  height: 600rpx;
}
view swiper swiper-item image{
  width: 100%;
  height: 600rpx;
}
scroll-view view image{
  width: 100%;
}
scroll-view{
  height: 1370rpx;
}
.detail {
  display: flex;
  flex-direction: column;
  margin-top: 15rpx;
  margin-bottom: 0rpx;
}
.detail .title {
  font-size: 40rpx;
  margin: 10rpx;
  color: black;
  text-align: justify;
}
.detail .price {
  color: red;
  font-size: 40rpx;
  margin: 10rpx;
}
.detail-nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  float: left;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 1;
  width: 100%;
  height: 150rpx;
}
.button-green {
  color: white;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 30rpx;
  border-radius: 0rpx;
  width: 50%;
  line-height: 50rpx;
  background-color: #4caf50;
}
.button-red {
  color: white;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 30rpx;
  border-radius: 0rpx;
  width: 50%;
  line-height: 50rpx;
  background-color: #f44336; 
}

.cart{
  height: 80rpx;
  width: 80rpx;
}
.text-remark {
  display: block;
  font-size: 30rpx;
  margin: 10rpx;
}
text {
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  margin: 10rpx;
}
/* sku选择 */
.dialog__mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.7);
  display: none;
}
.dialog__container {
  position: fixed;
  bottom: 0;
  width: 750rpx;
  height: 400rpx;
  background: white;
  transform: translateY(150%);
  transition: all 0.4s ease;
  z-index: 11;
}
.dialog--show .dialog__mask {
  display: block;
}
.dialog--show .dialog__container {
  transform: translateY(0);
}
.row {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.image-close {
  width: 40rpx;
  height: 40rpx;
  position: fixed;
  right: 10rpx;
  top: 10rpx;
}
.image-sku {
  width: 200rpx;
  height: 200rpx;
  z-index: 12;
  position: absolute;
  left: 20px;
  top: -30px;
  border-radius: 20rpx;
}
.column {
  display: flex;
  flex-direction: column;
}
.sku-price {
  color: red;
  position: relative;
  left: 300rpx;
  margin: 1rpx;
}
.sku-title {
  position: relative;
  left: 300rpx;
  margin: 1rpx;
}
.quantity-position{
  display: flex;
  flex-direction: row;
  align-items: center;
  position: absolute;
  width: 240rpx;
  height: 40rpx;
  right: 120rpx;
}
.image-plus {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 0rpx;
}
.image-minus {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 0rpx;
}
.quantity{
  size: 40rpx;
  position: absolute;
  left: 100rpx;
}